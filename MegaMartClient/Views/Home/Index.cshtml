@{
    ViewData["Title"] = "MegaMart Dashboard";
}

<div class="container mt-4">

    <h1 class="mb-4">Welcome to MegaMart SmartStock Client</h1>

    <p class="lead">
        Use the links below to manage products, suppliers, and purchase orders using the FreshSource API.
    </p>

    <hr />

    <div class="row">

        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">
                        View, create, update, and delete products from FreshSource.
                    </p>
                    <a class="btn btn-primary" asp-controller="Products" asp-action="Index">Manage Products</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">Suppliers</h5>
                    <p class="card-text">
                        View and manage supplier information.
                    </p>
                    <a class="btn btn-primary" asp-controller="Suppliers" asp-action="Index">Manage Suppliers</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">Purchase Orders</h5>
                    <p class="card-text">
                        Create and track purchase orders between MegaMart and FreshSource.
                    </p>
                    <a class="btn btn-primary" asp-controller="PurchaseOrders" asp-action="Index">Purchase Orders</a>
                </div>
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-md-6">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">Low Stock Alerts</h5>
                    <p class="card-text">
                        View products that are below the reorder threshold.
                    </p>
                    <a class="btn btn-warning" asp-controller="Products" asp-action="LowStock">View Alerts</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">Analytics Dashboard</h5>
                    <p class="card-text">
                        See stock levels and order trends (can use static data).
                    </p>
                    <a class="btn btn-info" asp-controller="Analytics" asp-action="Index">View Analytics</a>
                </div>
            </div>
        </div>

    </div>

</div>
