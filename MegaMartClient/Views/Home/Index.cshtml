@using MegaMartClient.Models.ViewModels
@model DashboardViewModel

@{
    ViewData["Title"] = "MegaMart Dashboard";
}

<div class="container mt-4">

    <h1 class="mb-4">MegaMart Analytics Overview</h1>

    <p class="text-muted">
        Analytics below are generated from <strong>live API data</strong>
        (products, suppliers, and purchase orders from FreshSource API).
    </p>

    <hr />

    <!-- Top KPI cards -->
    <div class="row mb-4">

        <!-- Total Products -->
        <div class="col-md-3">
            <a asp-controller="Products" asp-action="Index" class="text-decoration-none text-reset">
                <div class="card shadow-sm hover-shadow">
                    <div class="card-body">
                        <h6 class="card-subtitle text-muted mb-1">Total Products</h6>
                        <h3 class="card-title">@Model.TotalProducts</h3>
                        <small class="text-muted">Current amount of products</small>
                    </div>
                </div>
            </a>
        </div>

        <!-- Low Stock Items -->
        <div class="col-md-3">
            <a asp-controller="Products" asp-action="LowStock" class="text-decoration-none text-reset">
                <div class="card shadow-sm hover-shadow">
                    <div class="card-body">
                        <h6 class="card-subtitle text-muted mb-1">Low Stock Items</h6>
                        <h3 class="card-title text-warning">@Model.LowStockItems</h3>
                        <small class="text-muted">Qty ≤ reorder level</small>
                    </div>
                </div>
            </a>
        </div>

        <!-- Supplier Count -->
        <div class="col-md-3">
            <a asp-controller="Suppliers" asp-action="Index" class="text-decoration-none text-reset">
                <div class="card shadow-sm hover-shadow">
                    <div class="card-body">
                        <h6 class="card-subtitle text-muted mb-1">Suppliers</h6>
                        <h3 class="card-title">@Model.SupplierCount</h3>
                        <small class="text-muted">Active partners</small>
                    </div>
                </div>
            </a>
        </div>

        <!-- Open POs -->
        <div class="col-md-3">
            <a asp-controller="PurchaseOrders" asp-action="Index" class="text-decoration-none text-reset">
                <div class="card shadow-sm hover-shadow">
                    <div class="card-body">
                        <h6 class="card-subtitle text-muted mb-1">Open POs</h6>
                        <h3 class="card-title text-info">@Model.OpenPurchaseOrders</h3>
                        <small class="text-muted">Pending / Confirmed</small>
                    </div>
                </div>
            </a>
        </div>

    </div>


    <!-- Low Stock Products Chart -->
    <!-- Analytics detail row: Low stock + POs side by side -->
    <div class="row mb-4">

        <!-- Low Stock Products -->
        <div class="col-md-6">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">Low Stock Products</h5>

                    @if (Model.LowStockProducts != null && Model.LowStockProducts.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var p in Model.LowStockProducts)
                            {
                                var ratio = p.ReorderLevel == 0 ? 0 : (decimal)p.QuantityOnHand / p.ReorderLevel * 100;

                                string icon;
                                string barClass;

                                if (ratio <= 50)
                                {
                                    icon = "❗";
                                    barClass = "bg-danger";   // red
                                }
                                else if (ratio < 90)
                                {
                                    icon = "⚠️";
                                    barClass = "bg-warning"; // yellow
                                }
                                else
                                {
                                    icon = "✅";
                                    barClass = "bg-success"; // green
                                }

                                <li class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <span>@icon</span>
                                            <strong>@p.Name</strong>
                                            <span class="text-muted">(@p.Category)</span>
                                        </div>
                                        <small class="text-muted">@p.QuantityOnHand in stock</small>
                                    </div>

                                    <a asp-controller="PurchaseOrders"
                                       asp-action="Create"
                                       asp-route-productId="@p.Id"
                                       class="text-decoration-none">
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar @barClass"
                                                 role="progressbar"
                                                 style="width:@ratio%">
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            }

                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">
                            No products are currently below their reorder level.
                        </p>
                    }
                </div>
            </div>
        </div>

        <!-- Purchase Orders – Last 7 Days -->
        <div class="col-md-6">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">Purchase Orders – Last 7 Days</h5>

                    @if (Model.Last7Days.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>PO Count</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var day in Model.Last7Days)
                                {
                                    <tr>
                                        <td>@day.Date.ToString("MMM dd")</td>
                                        <td>@day.PoCount</td>
                                        <td>
                                            <span class="badge
                                                            @(day.StatusLabel == "Received" ? "bg-success" :
                                                                                                        day.StatusLabel == "Pending" ? "bg-warning text-dark" :
                                                                                                        day.StatusLabel == "Confirmed" ? "bg-info text-dark" :
                                                                                                        day.StatusLabel == "Cancelled" ? "bg-secondary" :
                                                                                                                                         "bg-light text-dark")">
                                        @day.StatusLabel
                                    </span>
                                </td>
                            </tr>
                                                        }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted mb-0">
                            No purchase orders created in the last 7 days.
                        </p>
                    }
                </div>
            </div>
        </div>

    </div>


    <!-- Navigation cards -->
    <h4 class="mt-4 mb-3">Manage SmartStock System</h4>
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">Browse product catalog and adjust stock.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Go to Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">Suppliers</h5>
                    <p class="card-text">Manage supplier records and contacts.</p>
                    <a asp-controller="Suppliers" asp-action="Index" class="btn btn-primary">Go to Suppliers</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">Purchase Orders</h5>
                    <p class="card-text">Review, create, and track purchase orders.</p>
                    <a asp-controller="PurchaseOrders" asp-action="Index" class="btn btn-primary">Go to Purchase Orders</a>
                </div>
            </div>
        </div>
    </div>

</div>
