@model MegaMartClient.Models.Dto.SupplierReadDto

@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="container mt-4">
    <h1 class="mb-3 text-danger">Delete Supplier</h1>

    <div class="alert alert-warning">
        Are you sure you want to delete this supplier?
    </div>

    <p><strong>@Model.Name</strong> (@Model.ContactEmail, @Model.Phone)</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Yes, delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </form>
</div>
