@model IEnumerable<MegaMartClient.Models.Dto.SupplierReadDto>

<h2>Suppliers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.ContactEmail</td>
                <td>@s.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@s.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Supplier</a>
