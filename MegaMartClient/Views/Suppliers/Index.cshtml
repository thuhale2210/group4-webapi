@model IEnumerable<MegaMartClient.Models.Dto.SupplierReadDto>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container mt-4">
    <h1 class="mb-3">Suppliers</h1>

    <a asp-action="Create" class="btn btn-primary mb-3">Create New Supplier</a>

    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.Name</td>
                    <td>@s.ContactEmail</td>
                    <td>@s.Phone</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-outline-primary">Details</a>
                        <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-secondary ms-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-danger ms-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
