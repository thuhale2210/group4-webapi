@model MegaMartClient.Models.Dto.SupplierUpdateDto

@{
    ViewData["Title"] = "Edit Supplier";
    var id = ViewBag.Id as int? ?? 0;
}

<div class="container mt-4">
    <h1 class="mb-3">Edit Supplier</h1>

    <form asp-action="Edit" method="post" asp-route-id="@id">
        <div class="mb-3">
            <label class="form-label">Supplier Id</label>
            <input class="form-control" value="@id" disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ContactEmail" class="form-label"></label>
            <input asp-for="ContactEmail" class="form-control" />
            <span asp-validation-for="ContactEmail" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </form>
</div>
