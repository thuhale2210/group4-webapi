@model MegaMartClient.Models.Dto.PurchaseOrderCreateDto

@{
    ViewData["Title"] = "Create Purchase Order";

    var productName = ViewBag.ProductName as string ?? "Selected Product";
    int? currentQty = ViewBag.CurrentQty as int?;
    int? reorderLevel = ViewBag.ReorderLevel as int?;
}

<div class="container mt-4">
    <h1 class="mb-4">Create Purchase Order</h1>

    <div class="row">
        <!-- Summary card -->
        <div class="col-md-5 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@productName</h5>

                    <p class="mb-1">
                        <strong>Product Id:</strong> @Model.ProductId
                    </p>
                    <p class="mb-1">
                        <strong>Supplier Id:</strong> @Model.SupplierId
                    </p>

                    @if (currentQty.HasValue && reorderLevel.HasValue)
                    {
                        <p class="mb-1">
                            <strong>Current Stock:</strong> @currentQty
                        </p>
                        <p class="mb-1">
                            <strong>Reorder Level:</strong> @reorderLevel
                        </p>
                    }

                    <p class="mt-2 text-muted small">
                        Fields are pre-filled based on the low stock item you selected.
                    </p>
                </div>
            </div>
        </div>

        <!-- Form -->
        <div class="col-md-7">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="ProductId" class="form-label">Product</label>
                    <select asp-for="ProductId"
                            class="form-select"
                            asp-items="ViewBag.Products">
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SupplierId" class="form-label">Supplier</label>
                    <select asp-for="SupplierId"
                            class="form-select"
                            asp-items="ViewBag.Suppliers">
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>

                <p class="text-muted small">
                    <strong>Note:</strong> Status will be set to <code>Pending</code> and CreatedAt will be set to the current time.
                </p>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
