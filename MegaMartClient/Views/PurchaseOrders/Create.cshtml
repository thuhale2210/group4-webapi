@model MegaMartClient.Models.ViewModels.PurchaseOrderFormViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create Purchase Order";
}

<div class="container mt-4">
    <h1 class="mb-4">Create Purchase Order</h1>

    <div class="row">
        <!-- LEFT: FORM -->
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="SupplierId" class="form-label"></label>
                    <select asp-for="SupplierId"
                            class="form-select"
                            asp-items="Model.SupplierOptions">
                        <option value="">-- Select Supplier --</option>
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductId" class="form-label"></label>
                    <select asp-for="ProductId"
                            class="form-select"
                            asp-items="Model.ProductOptions">
                        <option value="">-- Select Product --</option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>

                    @if (Model.SuggestedQuantity.HasValue)
                    {
                        <small class="text-muted">
                            Suggested quantity: @Model.SuggestedQuantity.Value
                            (based on current inventory)
                        </small>
                    }
                </div>

                <button type="submit" class="btn btn-primary mt-2">Create</button>
                <a asp-action="Index" class="btn btn-outline-secondary mt-2">Cancel</a>
            </form>
        </div>

        <!-- RIGHT: CURRENT INVENTORY PANEL -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Current Inventory</h5>

                    @if (!string.IsNullOrEmpty(Model.SelectedProductName))
                    {
                        <p class="mb-1">
                            <strong>Product:</strong> @Model.SelectedProductName
                        </p>
                        @if (!string.IsNullOrEmpty(Model.SelectedProductCategory))
                        {
                            <p class="mb-1">
                                <strong>Category:</strong> @Model.SelectedProductCategory
                            </p>
                        }

                        @if (Model.SelectedProductQuantityOnHand.HasValue)
                        {
                            <p class="mb-1">
                                <strong>On Hand:</strong> @Model.SelectedProductQuantityOnHand
                            </p>
                        }

                        @if (Model.SelectedProductReorderLevel.HasValue)
                        {
                            <p class="mb-3">
                                <strong>Reorder Level:</strong> @Model.SelectedProductReorderLevel
                            </p>
                        }

                        @if (Model.SelectedProductQuantityOnHand.HasValue &&
                                            Model.SelectedProductReorderLevel.HasValue)
                        {
                            var onHand = Model.SelectedProductQuantityOnHand.Value;
                            var reorder = Model.SelectedProductReorderLevel.Value;
                            var diff = reorder - onHand;

                            <p class="mb-0">
                                @if (diff > 0)
                                {
                                    <span class="text-danger">
                                        You are @diff units below reorder level.
                                    </span>
                                }
                                else
                                {
                                    <span class="text-success">
                                        You are at or above reorder level.
                                    </span>
                                }
                            </p>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">
                            Select a product (or use a Restock shortcut) to see current inventory.
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
