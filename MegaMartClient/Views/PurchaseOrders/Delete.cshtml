@model MegaMartClient.Models.Dto.PurchaseOrderReadDto

<h2>Delete Purchase Order</h2>

<p>Are you sure you want to delete this purchase order?</p>

<ul>
    <li><strong>Id:</strong> @Model.Id</li>
    <li><strong>Product Id:</strong> @Model.ProductId</li>
    <li><strong>Supplier Id:</strong> @Model.SupplierId</li>
    <li><strong>Quantity:</strong> @Model.Quantity</li>
    <li><strong>Status:</strong> @Model.Status</li>
</ul>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

