@model MegaMartClient.Models.Dto.PurchaseOrderReadDto

@{
    ViewData["Title"] = "Delete Purchase Order";
}

<div class="container mt-4">
    <h1 class="mb-3 text-danger">Delete Purchase Order</h1>

    <div class="alert alert-warning">
        Are you sure you want to delete this purchase order?
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <h4 class="card-title">Order #@Model.Id</h4>
            <p class="mb-1"><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
            <p class="mb-1"><strong>Status:</strong> @Model.Status</p>
            <p class="mb-1"><strong>Product Id:</strong> @Model.ProductId</p>
            <p class="mb-1"><strong>Quantity:</strong> @Model.Quantity</p>
            <p class="mb-0"><strong>Supplier Id:</strong> @Model.SupplierId</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <button type="submit" class="btn btn-danger">Yes, delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </form>
</div>
