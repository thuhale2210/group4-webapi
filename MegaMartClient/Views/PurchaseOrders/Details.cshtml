@model MegaMartClient.Models.Dto.PurchaseOrderReadDto

@{
    ViewData["Title"] = "Purchase Order Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Purchase Order Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">Order #@Model.Id</h4>

            <dl class="row">
                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Product Id</dt>
                <dd class="col-sm-9">@Model.ProductId</dd>

                <dt class="col-sm-3">Quantity</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>

                <dt class="col-sm-3">Supplier Id</dt>
                <dd class="col-sm-9">@Model.SupplierId</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
