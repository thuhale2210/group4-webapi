@model IEnumerable<MegaMartClient.Models.Dto.PurchaseOrderReadDto>

<h2>Purchase Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>ProductId</th>
            <th>SupplierId</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Order Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr class="@(o.Status == "Pending" ? "table-warning" : "")">
                <td>@o.Id</td>
                <td>@o.ProductId</td>
                <td>@o.SupplierId</td>
                <td>@o.Quantity</td>
                <td>@o.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@o.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@o.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Purchase Order</a>
