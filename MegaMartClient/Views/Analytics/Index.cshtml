@model MegaMartClient.Models.ViewModels.AnalyticsViewModel

@{
    ViewData["Title"] = "Analytics Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-3">Analytics Dashboard</h1>

    <div class="row mb-4">
        <!-- Products -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Total Products</h6>
                    <h3 class="card-title">@Model.TotalProducts</h3>
                </div>
            </div>
        </div>

        <!-- Low Stock -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Low Stock Products</h6>
                    <h3 class="card-title text-danger">@Model.LowStockProducts</h3>
                    <a asp-controller="Products" asp-action="LowStock" class="small">View details</a>
                </div>
            </div>
        </div>

        <!-- Suppliers -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Suppliers</h6>
                    <h3 class="card-title">@Model.TotalSuppliers</h3>
                    <a asp-controller="Suppliers" asp-action="Index" class="small">View suppliers</a>
                </div>
            </div>
        </div>

        <!-- Purchase Orders -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Purchase Orders</h6>
                    <h3 class="card-title">@Model.TotalPurchaseOrders</h3>
                    <p class="mb-0 small">
                        Pending: <strong>@Model.PendingOrders</strong> |
                        Confirmed: <strong>@Model.ConfirmedOrders</strong>
                    </p>
                    <p class="mb-0 small">
                        Received: <strong>@Model.ReceivedOrders</strong> |
                        Cancelled: <strong>@Model.CancelledOrders</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Low stock product list -->
    <div class="row mb-4">
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Low Stock Products</h5>

                    @if (!Model.LowStockProductList.Any())
                    {
                        <p class="text-muted">No products are currently below reorder level.</p>
                    }
                    else
                    {
                        <table class="table table-sm table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Qty On Hand</th>
                                    <th>Reorder Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model.LowStockProductList)
                                {
                                    <tr>
                                        <td>@p.Name</td>
                                        <td>@p.Category</td>
                                        <td class="text-danger">@p.QuantityOnHand</td>
                                        <td>@p.ReorderLevel</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>

        <!-- Recent orders -->
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Recent Purchase Orders</h5>

                    @if (!Model.RecentOrders.Any())
                    {
                        <p class="text-muted">No purchase orders found.</p>
                    }
                    else
                    {
                        <table class="table table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Id</th>
                                    <th>Status</th>
                                    <th>Product</th>
                                    <th>Qty</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var o in Model.RecentOrders)
                                {
                                    <tr>
                                        <td>@o.Id</td>
                                        <td>@o.Status</td>
                                        <td>@o.ProductId</td>
                                        <td>@o.Quantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>

    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
        Back to Dashboard
    </a>
</div>
