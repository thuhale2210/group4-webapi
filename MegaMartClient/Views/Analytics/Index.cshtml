@{
    ViewData["Title"] = "Analytics Dashboard";
}

<h1 class="mb-4">Analytics Dashboard</h1>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h6 class="card-subtitle text-muted mb-1">Total Products</h6>
                <h3>@ViewBag.TotalProducts</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h6 class="card-subtitle text-muted mb-1">Low-Stock Items</h6>
                <h3 class="text-danger">@ViewBag.LowStockCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h6 class="card-subtitle text-muted mb-1">Suppliers</h6>
                <h3>@ViewBag.TotalSuppliers</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h6 class="card-subtitle text-muted mb-1">Open POs</h6>
                <h3>@ViewBag.OpenPurchaseOrders</h3>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Stock by Category</h5>
                <p class="text-muted mb-0">
                    Placeholder chart – later you can replace this with a real chart or API data.
                </p>
                <div class="mt-3 border rounded bg-light" style="height:220px;"></div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Recent Purchase Orders</h5>
                <p class="text-muted mb-0">
                    Placeholder table – you can fill this from mock data or the API later.
                </p>

                <table class="table table-sm mt-3">
                    <thead class="table-light">
                        <tr>
                            <th>PO #</th>
                            <th>Supplier</th>
                            <th>Status</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>PO-1001</td>
                            <td>FreshSource</td>
                            <td><span class="badge bg-warning text-dark">Pending</span></td>
                            <td>$450.00</td>
                        </tr>
                        <tr>
                            <td>PO-1000</td>
                            <td>FreshSource</td>
                            <td><span class="badge bg-success">Received</span></td>
                            <td>$320.00</td>
                        </tr>
                        <tr>
                            <td>PO-0999</td>
                            <td>FreshSource</td>
                            <td><span class="badge bg-info text-dark">Confirmed</span></td>
                            <td>$600.00</td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
