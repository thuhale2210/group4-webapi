@model IEnumerable<MegaMartClient.Models.Dto.ProductReadDto>

@{
    ViewData["Title"] = "Products";
}

<h1 class="mb-3">Products</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Product</a>
</p>

@foreach (var categoryGroup in Model.GroupBy(p => p.Category))
{
    <section class="mb-4">
        <h3 class="mb-3">@categoryGroup.Key</h3>

        <div class="row row-cols-1 row-cols-md-3 g-3">
            @foreach (var item in categoryGroup)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl"
                                 class="card-img-top"
                                 alt="@item.Name" />
                        }

                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>

                            <p class="card-text mb-1">
                                <strong>Supplier:</strong>
                                @if (!string.IsNullOrEmpty(item.SupplierName))
                                {
                                    @item.SupplierName
                                }
                                else
                                {
                                    @("ID: " + item.SupplierId)
                                }
                            </p>

                            <p class="card-text mb-1">
                                <strong>Price:</strong> @item.UnitPrice.ToString("C")
                            </p>

                            <p class="card-text mb-1">
                                <strong>On Hand:</strong> @item.QuantityOnHand
                            </p>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex flex-wrap gap-2">

                                <a asp-action="Details"
                                   asp-route-id="@item.Id"
                                   class="btn btn-outline-info btn-sm">
                                    Details
                                </a>

                                <a asp-action="Edit"
                                   asp-route-id="@item.Id"
                                   class="btn btn-outline-secondary btn-sm">
                                    Edit
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.Id"
                                   class="btn btn-outline-danger btn-sm">
                                    Delete
                                </a>

                                <a asp-controller="PurchaseOrders"
                                   asp-action="Create"
                                   asp-route-productId="@item.Id"
                                   class="btn btn-warning btn-sm">
                                    Restock
                                </a>


                                <form asp-action="QuickUpdateQoH"
                                      asp-route-id="@item.Id"
                                      method="post"
                                      class="d-flex align-items-center gap-1">

                                    <input type="number"
                                           name="newQoH"
                                           min="0"
                                           step="1"
                                           value="@item.QuantityOnHand"
                                           class="form-control form-control-sm"
                                           style="width:90px;" />

                                    <button type="submit" class="btn btn-sm btn-success">
                                        Update Qty
                                    </button>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </section>

    <hr />
}
